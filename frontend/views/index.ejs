<%- include('partials/header') %>

<main class="flex-1 overflow-y-auto bg-gray-800 text-white pb-24">
  <!-- Hero Section -->
  <div class="relative h-80 overflow-hidden">
    <img src="/images/hero.jpg" alt="Featured" class="w-full h-full object-cover">
    <div class="absolute inset-0 bg-gradient-to-t from-gray-800 via-gray-800/60 to-transparent"></div>
    <div class="absolute bottom-8 left-8">
      <h1 class="text-4xl font-bold mb-2">Welcome back!</h1>
      <p class="text-xl text-gray-300 mb-4">Discover new music and enjoy your favorites</p>
      <a href="#" class="px-4 py-2 bg-red-500 rounded-md font-semibold hover:bg-red-600">Start Listening</a>
    </div>
  </div>

  <div class="p-8 space-y-8">
    <!-- Recently Played -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-semibold">Recently Played</h2>
        <a href="#" class="text-gray-400 hover:text-white">Show all</a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <% tracks.slice(0,6).forEach(track => { %>
          <div class="bg-gray-700 rounded-lg p-2 flex flex-col items-center hover:scale-105 transform transition">
            <img src="/images/<%= track.cover %>" alt="<%= track.title %>" class="rounded-lg w-full h-32 object-cover">
            <h4 class="mt-2 font-semibold"><%= track.title %></h4>
            <p class="text-gray-300 text-sm"><%= track.artist %></p>
            <button class="mt-2 px-3 py-1 bg-red-500 rounded-full hover:bg-red-600 play-btn" data-src="/songs/<%= track.file %>">
              <i class="fa-solid fa-play"></i>
            </button>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Popular This Week -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-semibold">Popular This Week</h2>
        <a href="#" class="text-gray-400 hover:text-white">Show all</a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <% tracks.slice(0,5).forEach(track => { %>
          <div class="bg-gray-700 rounded-lg p-2 flex flex-col items-center hover:scale-105 transform transition">
            <img src="/images/<%= track.cover %>" alt="<%= track.title %>" class="rounded-lg w-full h-32 object-cover">
            <h4 class="mt-2 font-semibold"><%= track.title %></h4>
            <p class="text-gray-300 text-sm"><%= track.artist %></p>
            <button class="mt-2 px-3 py-1 bg-red-500 rounded-full hover:bg-red-600 play-btn" data-src="/songs/<%= track.file %>">
              <i class="fa-solid fa-play"></i>
            </button>
          </div>
        <% }) %>
      </div>
    </section>
  </div>
</main>

<%- include('partials/footer') %>
